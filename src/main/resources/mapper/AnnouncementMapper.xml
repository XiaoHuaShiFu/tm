<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaohuashifu.tm.dao.AnnouncementMapper">
    <sql id="announcementColumn">
        id, admin_id, title, content, publish_time, create_time, update_time
    </sql>

	
	<insert id="insertAnnouncement" parameterType="com.xiaohuashifu.tm.pojo.do0.AnnouncementDO">
		insert into announcement(admin_id, title, content) values (#{adminId}, #{title}, #{content});
	</insert>
	
	<update id="updateAnnouncement" parameterType="com.xiaohuashifu.tm.pojo.do0.AnnouncementDO">
	    update announcement
        <set>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="content != null">
                content = #{content}
            </if>
        </set>
        where id = #{id}
	</update>
	
	<delete id="deleteAnnouncement" parameterType="integer">
	    delete from announcement where id = #{id};
	</delete>
	
	<select id="getAnnouncement" parameterType="com.xiaohuashifu.tm.pojo.query.AnnouncementQuery" 
	    resultType="com.xiaohuashifu.tm.pojo.do0.AnnouncementDO">
        select
        <include refid="announcementColumn"/>
        from announcement
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="adminId != null">
                and admin_id = #{adminId}
            </if>
        </where>
    </select>
    
    <select id="listAnnouncements" resultType="com.xiaohuashifu.tm.pojo.do0.AnnouncementDO">
        select
        <include refid="announcementColumn"/>
        from announcement
        order by publish_time desc
    </select>
    
</mapper>